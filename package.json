{
  "scripts": {
    "assets:head": "esbuild src/js/inline-head.js --minify --format=iife --outdir=public/dist/assets",
    "assets:worker": "node scripts/buildServiceWorker.js",
    "dev": "shx touch src/.lock && vite",
    "build": "shx rm -f src/.lock && vite build && npm run assets:head && npm run assets:worker",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.js\""
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "animere": "^1.14.1",
    "flickity": "^2.2.2",
    "medium-zoom": "^1.0.6"
  },
  "devDependencies": {
    "colorette": "^2.0.16",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^36.1.1",
    "fast-glob": "^3.2.7",
    "nanoid": "^3.1.29",
    "prettier": "^2.4.1",
    "sass": "^1.42.1",
    "shx": "^0.3.3",
    "vite": "^2.6.7",
    "vite-plugin-live-reload": "^2.1.0"
  }
}
