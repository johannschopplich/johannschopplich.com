{
  "require": {
    "php": ">=7.4.0",
    "getkirby/cms": "^3.0",
    "symfony/yaml": "^5.0",
    "johannschopplich/kirby-extended": "^2.0",
    "johannschopplich/kirby-blurry-placeholder": "^1.2",
    "bnomei/kirby3-feed": "^1.3"
  },
  "scripts": {
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S 127.0.0.1:8000 -t public/ server.php"
    ]
  },
  "autoload": {
    "psr-4": {
      "Kirby\\": "site/app/"
    },
    "exclude-from-classmap": [
      "vendor/getkirby/cms/src/Data/Yaml.php"
    ]
  },
  "config": {
    "optimize-autoloader": true
  },
  "extra": {
    "kirby-cms-path": false
  }
}
