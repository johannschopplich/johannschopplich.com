{
  "require": {
    "php": ">=8.0.0",
    "getkirby/cms": "^3.8",
    "getkirby/layouts": "^1.0",
    "symfony/yaml": "^5.4",
    "johannschopplich/kirby-helpers": "^3.0",
    "johannschopplich/kirby-blurry-placeholder": "^2.0",
    "johannschopplich/kirby-punctuation-section": "^2.1",
    "bnomei/kirby3-feed": "^1.5"
  },
  "scripts": {
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S localhost:8000 -t public vendor/getkirby/cms/router.php"
    ]
  },
  "autoload": {
    "psr-4": {
      "Kirby\\": "site/app/"
    },
    "exclude-from-classmap": [
      "vendor/getkirby/cms/src/Data/Yaml.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "extra": {
    "kirby-cms-path": false
  }
}
