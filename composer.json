{
  "require": {
    "getkirby/cms": "^4",
    "getkirby/cli": "^1.2",
    "getkirby/kql": "^2.1",
    "johannschopplich/kirby-helpers": "^6.1",
    "johannschopplich/kirby-headless": "^3",
    "johannschopplich/kirby-algolia-docsearch": "^0.5",
    "johannschopplich/kirby-content-translator": "^1.2",
    "bnomei/kirby3-feed": "^1.5",
    "tobimori/kirby-thumbhash": "^1.1"
  },
  "scripts": {
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S localhost:8000 -t public vendor/getkirby/cms/router.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true,
      "php-http/discovery": true
    }
  },
  "extra": {
    "kirby-cms-path": false
  }
}
